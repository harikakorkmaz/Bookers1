<!DOCTYPE HTML>
  <html>
    <head>
      <meta charset="UTF-8">
      <link rel="stylesheets" href="books.scss">
    </head>
    <body>
      <h1>Editing Book</h1>
      <%= form_with model:@book, local:true do |f| %>
         <% if @book.errors.any? %>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li>error <%= message %></li>
            <% end %>
          </ul>
         <% end %>
        <div class="field">
          <p class="contents">Title</p>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <p class="contents">Body</p>
          <%= f.text_area :body %>
        </div>
        <div class="actions">
        <%= f.submit 'Update Book' %>
        </div>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book), {class: "contents"} %>
      <span>|</span>
      <a class="contents" href="/books">Back</a>
  </body>
</html>